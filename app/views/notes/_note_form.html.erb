<%= form_with(model: note, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :content, 'ノート（１００文字まで）/Note (maximum 100 characters)' %>
    <%= f.text_area :content, class: 'form-control', rows: 5 %>
  </div>

  <% if make_announce? %>
    <div class="form-check">
        <%= f.check_box :announce, class: 'form-check-input' %>
        <%= f.label :announce, '全員の「全体アナウンス」に表示する', class: 'form-check-label' %>
    </div>
  <% end %>

  <% if note.created_at.nil? %>
    <%= f.submit 'このノートを作成する/Post this note', class: 'btn btn-primary btn-block' %>
  <% else %>
    <%= f.submit 'このノートを更新する/Update this note', class: 'btn btn-primary btn-block' %>
  <% end %>

<% end %>