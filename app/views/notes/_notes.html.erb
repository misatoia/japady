
<% if notes&.any? %>
  <% notes.each do |note| %>
    <div class="card shadow-sm mb-3 bg-white rounded">
      <div class="card-header btn-toolbar">
        <div class="btn-group">
          <a href="<%= user_path(note.user) %>"><%= note.user.nickname %><%= '(あなた)' if note.user == current_user %></a>さん
          <%= note.date_of_note %>
        </div>
        <div class="btn-group btn-sm ml-auto">
          <% if !current_user.favoriting?(note) %>
            <%= link_to "☆", favorites_path(note.favorites.build, note_id: note.id), method: :post %>
          <% else %>
            <%= link_to "★", favorite_path(note.favorites.find_by(user_id: current_user.id)), method: :delete %>
          <% end %>
        </div>
      </div>
      <div class="card-body">
        <div class="card-text"><%= simple_format(note.content) %></div>

        <div class="btn-toolbar">
          <div class="btn-group btn-sm">
            <% if note.likes.size > 0 %>
              <i class="far fa-thumbs-up"></i> <%= "#{note.likes.size}人" %>
            <% end %>
            <% if note.user != current_user %>
              <% if !current_user.liking?(note) %>
                &nbsp; <%= link_to "いいね！する", likes_path(note.likes.build, note_id: note.id), method: :post, class: "btn btn-sm btn-primary badge rounded-pill" %>
              <% end %>
            <% end %>
          </div>
          <div class="btn-group btn-sm ml-auto">
            <% if note.user == current_user || edit_othernotes? %>
              <i class="fas fa-edit"></i><%= link_to "編集する", edit_note_path(note), class: "card-link" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

<% else %>
    <div class="alert alert-warning">表示できるノートがありません。</div>
<% end %>
